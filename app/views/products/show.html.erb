<h2><%= t('.title') %></h2>

<%= image_tag @product.image, width: 200 if @product.image.attached? %>
<h3><%= @product.title %></h3>
<p><%= @product.description %></p>
<p><%= @product.price %></p>

<%= link_to t('.edit'), edit_product_path(@product) if @product.user == Current.user %>
<%= link_to t('.delete'), @product, data: {
  turbo_method: :delete, turbo_confirm: t('common.confirm')
  } if @product.user == Current.user %>
<%= link_to t('.back'), products_path %>
